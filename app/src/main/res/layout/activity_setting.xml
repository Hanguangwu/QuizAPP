<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/primary_color"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true">

        </ImageView>

        <Button
            android:id="@+id/addQuestion_button"
            android:onClick="addQuestionByYourself"
            android:text="自主添加问题"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:textSize="25sp"
            android:padding="8dp" />

        <Button
            android:id="@+id/queryAllInsertedQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_btn"
            android:onClick="queryAllInsertedQuestions"
            android:padding="8dp"
            android:text="查看所有问题"
            android:textColor="@color/primary_color"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/select_button"
            android:onClick="selectNumOfQuestionsByYourself"
            android:text="自主选择挑战的问题数量"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_btn"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:textSize="25sp"
            android:padding="8dp"/>

        <Button
            android:onClick="exit_setting"
            android:text="退出设置"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_btn"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:textSize="25sp"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>